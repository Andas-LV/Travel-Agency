{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/main.ts",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"],
      "headers": { "Access-Control-Allow-Origin": "*" }
    },
    {
      "src": "/(.*)",
      "dest": "client/$1",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"],
      "headers": { "Access-Control-Allow-Origin": "*" }
    }
  ],
  "builds": [
    {
      "src": "server/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    }
  ]
}
